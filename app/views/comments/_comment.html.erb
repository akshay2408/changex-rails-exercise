<div id="<%= dom_id(comment)%>">
  <div class="comment-card">
      <ul>
        <li class="comment-reason"><span>Reason for status change:</span> <%= comment.body %></li>
        <li><span>Status change From:</span>  <%= comment.current_status.capitalize %></li>
        <li><span>Status change To:</span>  <%= comment.changed_status.capitalize %></li>
        <li><span>Create Date:</span>  <%= comment.created_at %></li>
    </ul>
  </div>
</div>
